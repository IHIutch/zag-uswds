{
  "name": "@uswds-tailwind/turborepo-monorepo",
  "workspaces": [
    "apps/*",
    "packages/machines/*",
    "packages/theme",
    "packages/compat"
  ],
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "publish": "turbo run publish",
    "changeset": "changeset",
    "version": "changeset version",
    "publish-packages": "turbo run build && changeset version && changeset version && changeset publish --tag alpha",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@changesets/cli": "^2.29.2",
    "@playwright/test": "^1.51.1",
    "eslint": "^9.24.0",
    "playwright": "^1.39.0",
    "turbo": "^2.4.4"
  }
}
